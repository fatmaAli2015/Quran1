<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5e505ec7"
    tools:context="com.fatmaali.quran.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="45dp"
                android:gravity="center"
                android:textColor="#393535"
                android:text="Quran" />

            <ListView
                android:layout_width="match_parent"
                android:id="@+id/listview_menu"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:background="#54356ac1"
                android:onClick="img_share"
                app:srcCompat="?attr/actionModeShareDrawable" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:background="#54356ac1"
                android:onClick="img_more"
                app:srcCompat="?android:attr/actionModeSelectAllDrawable" />
            <ImageView
                android:id="@+id/img_feedback"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:background="#54356ac1"
                android:onClick="img_email"
                app:srcCompat="@android:drawable/sym_action_email" />

            <ImageView
                android:id="@+id/img_clear"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:background="#54356ac1"
                android:onClick="img_close"
                app:srcCompat="@android:drawable/ic_delete" />



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
